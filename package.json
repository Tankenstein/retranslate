{
  "name": "retranslate",
  "description": "Real simple translations for react.",
  "main": "build/retranslate.js",
  "version": "0.4.0",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tankenstein/retranslate/issues",
    "email": "ukutammet@gmail.com"
  },
  "keywords": ["react", "i18n", "localization", "translate", "translation"],
  "repository": {
    "type": "git",
    "url": "git://github.com/tankenstein/retranslate.git"
  },
  "author": "Uku Markus Tammet <ukutammet@gmail.com>",
  "devDependencies": {
    "babel-core": "6.17.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "17.0.2",
    "babel-loader": "6.2.7",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-preset-react-app": "^2.0.1",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "coveralls": "^2.11.15",
    "dotenv": "2.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-loader": "1.6.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.6.0",
    "filesize": "3.3.0",
    "fs-extra": "0.30.0",
    "gzip-size": "3.0.0",
    "jest": "17.0.2",
    "json-loader": "0.5.4",
    "path-exists": "2.1.0",
    "prop-types": "^15.6.1",
    "publish": "^0.6.0",
    "raf": "^3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "recursive-readdir": "2.1.0",
    "strip-ansi": "3.0.1",
    "webpack": "1.14.0",
    "webpack-manifest-plugin": "1.1.0"
  },
  "peerDependencies": {
    "react": "^16.3.2",
    "prop-types": "^15.6.1"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "coverage": "node scripts/test.js --env=jsdom --coverage"
  },
  "jest": {
    "setupFiles": ["<rootDir>/config/setupPolyfills.js", "<rootDir>/config/setupEnzyme.js"],
    "collectCoverageFrom": ["src/**/*.{js,jsx}"],
    "testPathIgnorePatterns": ["<rootDir>[/\\\\](build|docs|node_modules)[/\\\\]"],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"]
  },
  "babel": {
    "presets": ["react-app"],
    "plugins": ["transform-react-remove-prop-types"]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-filename-extension": 0,
      "import/prefer-default-export": 0,
      "import/no-extraneous-dependencies": 0
    }
  }
}
